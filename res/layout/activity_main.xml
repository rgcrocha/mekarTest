<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="Corporal Evaluation"
        android:textSize="@dimen/appH2" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/bPatients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bPatientsClick"
        android:text="Patients" />

    <Button
        android:id="@+id/bEvaluations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bEvaluationsClick"
        android:text="Evaluations" />

    <Button
        android:id="@+id/bProtocols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bProtocolsClick"
        android:text="Protocols" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bSair"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="bExitClick"
            android:text="Exit" />

        <Button
            android:id="@+id/bAbout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="bAboutClick"
            android:text="About" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>
